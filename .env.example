# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Note: VITE_SUPABASE_SERVICE_ROLE_KEY is NOT recommended for frontend applications
# as it exposes full database access. Use proper RLS policies instead.
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Cloudflare R2 Storage (Optional - for image hosting)
VITE_R2_ACCOUNT_ID=your_r2_account_id
VITE_R2_ACCESS_KEY_ID=your_r2_access_key
VITE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
VITE_R2_BUCKET_NAME=your_bucket_name
VITE_R2_PUBLIC_URL=https://your-public-url.r2.dev

# Razorpay Payment Gateway
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google Analytics 4 (GA4)
# Get your Measurement ID from https://analytics.google.com/
# Format: G-XXXXXXXXXX
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Tawk.to Live Chat
# Get your Property ID from https://www.tawk.to
# Dashboard > Administration > Property
# Format: 64-character hexadecimal string
VITE_TAWK_PROPERTY_ID=your_tawk_property_id

# Base URL (for production)
# Used for canonical URLs, sitemaps, and Open Graph tags
VITE_BASE_URL=https://nirchal.com

# Environment
NODE_ENV=development
