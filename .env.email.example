# Email Configuration (Add these to your .env file)

# SMTP Configuration for Zoho
VITE_SMTP_USER=your-email@yourdomain.com
VITE_SMTP_PASSWORD=your-app-password
VITE_SMTP_FROM=noreply@yourdomain.com
VITE_SMTP_REPLY_TO=support@yourdomain.com

# IMAP Configuration for Zoho (for receiving emails)
VITE_IMAP_USER=your-email@yourdomain.com
VITE_IMAP_PASSWORD=your-app-password

# App URL (for email links)
VITE_APP_URL=https://your-netlify-site.netlify.app

# Zoho SMTP Settings
# Server: smtppro.zoho.in
# Port: 465
# Security: SSL
#
# Zoho IMAP Settings  
# Server: imappro.zoho.in
# Port: 993
# Security: SSL
