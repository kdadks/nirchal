# Netlify Headers Configuration File
# This is not PowerShell - it's a Netlify configuration file
# Security Headers for PCI DSS Compliance

/*
  # Content Security Policy - Restrict resource loading for security
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://checkout.razorpay.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; connect-src 'self' https://api.razorpay.com https://*.supabase.co wss://*.supabase.co; frame-src https://api.razorpay.com; font-src 'self' https://fonts.gstatic.com; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none';
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Prevent clickjacking attacks
  X-Frame-Options: DENY
  
  # Enable XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Additional security headers for data protection
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  X-XSS-Protection: 1; mode=block
  
  # Force HTTPS (HSTS)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Don't send referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Control which features the site can access (deny all for security)
  Permissions-Policy: geolocation=self, microphone=self, camera=self, usb=self
  
  # Cache control for security
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Special headers for payment pages
/checkout
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://checkout.razorpay.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; connect-src 'self' https://api.razorpay.com https://*.supabase.co wss://*.supabase.co; frame-src https://api.razorpay.com; font-src 'self' https://fonts.gstatic.com; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none';
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  X-Content-Type-Options: nosniff
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Cache-Control: no-cache, no-store, must-revalidate

# API endpoints security
/.netlify/functions/*
  Content-Security-Policy: default-src 'none'
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Cache-Control: no-cache, no-store, must-revalidate
